<div class="container">
  <div class="row justify-content-center">
    <img src="/assets/img/burger.jpg" alt="Burger">
  </div>
  <div class="row justify-content-center">
    <h1>Eat - DA - Burger!</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <ol>
      <h2>Burgers that need to be EATEN!!!</h2>  
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-6">
      <h2>Burgers that are devoured!</h2>
      <ol>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>
    </div>
    <div class="row justify-content-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burg">Name of Burger:</label>
          <input type="text" id="burg" name="burger">
          <button type="submit">Add Burger</button>
        </div>
      </form>
  </div>
</div>
